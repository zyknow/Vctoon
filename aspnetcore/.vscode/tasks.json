{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-web",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/src/Vctoon.Web/Vctoon.Web.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "group": "build"
    },
    {
      "label": "build-dbmigrator",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/src/Vctoon.DbMigrator/Vctoon.DbMigrator.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "group": "build"
    },
    {
      "label": "build-all",
      "command": "dotnet",
      "type": "process",
      "args": ["build", "${workspaceFolder}/Vctoon.sln"],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "clean",
      "command": "dotnet",
      "type": "process",
      "args": ["clean", "${workspaceFolder}/Vctoon.sln"],
      "problemMatcher": "$msCompile",
      "group": "build"
    },
    {
      "label": "restore",
      "command": "dotnet",
      "type": "process",
      "args": ["restore", "${workspaceFolder}/Vctoon.sln"],
      "problemMatcher": "$msCompile",
      "group": "build"
    },
    {
      "label": "watch-web",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/src/Vctoon.Web/Vctoon.Web.csproj"
      ],
      "options": {
        "cwd": "${workspaceFolder}/src/Vctoon.Web",
        "env": {
          "ASPNETCORE_ENVIRONMENT": "Development"
        }
      },
      "problemMatcher": "$msCompile",
      "isBackground": true,
      "group": "build"
    },
    {
      "label": "run-web",
      "command": "dotnet",
      "type": "process",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/src/Vctoon.Web/Vctoon.Web.csproj"
      ],
      "options": {
        "cwd": "${workspaceFolder}/src/Vctoon.Web",
        "env": {
          "ASPNETCORE_ENVIRONMENT": "Development",
          "ASPNETCORE_URLS": "http://localhost:44364"
        }
      },
      "problemMatcher": "$msCompile",
      "group": "build"
    },
    {
      "label": "run-dbmigrator",
      "command": "dotnet",
      "type": "process",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/src/Vctoon.DbMigrator/Vctoon.DbMigrator.csproj"
      ],
      "options": {
        "cwd": "${workspaceFolder}/src/Vctoon.DbMigrator",
        "env": {
          "DOTNET_ENVIRONMENT": "Development"
        }
      },
      "problemMatcher": "$msCompile",
      "group": "build"
    }
  ]
}
